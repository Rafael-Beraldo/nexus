{
  "files.associations": {
    "*.{cmp,page,component}": "html"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true
  },
  "salesforcedx-vscode-core.retrieve-test-code-coverage": false,
  "salesforcedx-vscode-core.detectConflictsAtSync": false,
  "salesforcedx-vscode-core.show-cli-success-msg": false,

  "salesforcedx-vscode-core.telemetry.enabled": false,
  "salesforcedx-vscode-core.push-or-deploy-on-save.enabled": true,

  "editor.formatOnSave": true,

  "workbench.colorCustomizations": {
    "activityBar.background": "#5e02b4b7",
    "titleBar.activeBackground": "#5e02b4b7"
  }
}
